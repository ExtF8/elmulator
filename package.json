{
    "name": "elmulator",
    "version": "2.4.0",
    "description": "calculator for Elmar",
    "author": "ExtF8",
    "main": "main.js",
    "publish": [
        {
            "provider": "github",
            "owner": "ExtF8",
            "url": "https://github.com/ExtF8/elmulator/releases/"
        }
    ],
    "scripts": {
        "start": "export NODE_ENV=development&&electron .",
        "build": "rm -rfvd dist/ && electron-builder --linux --win"
    },
    "build": {
        "appId": "com.extfield8.elmulator",
        "productName": "Elmulator",
        "asar": true,
        "asarUnpack": [
            "tools/**"
        ],
        "linux": {
            "icon": "./images/icons/32x32.png",
            "category": "Utility",
            "target": [
                "snap"
            ],
            "electronLanguages": [
                "en-US"
            ]
        },
        "snap": {
            "confinement": "strict",
            "summary": "Calculator for Elmar",
            "grade": "stable",
            "base": "core20"
        },
        "win": {
            "artifactName": "Elmulator-${version}-${arch}.${ext}",
            "target": "nsis",
            "electronLanguages": [
                "en-US"
            ],
            "icon": "./images/icons/icon.ico",
            "compression": "maximum"
        },
        "copyright": "Copyright Â© 2024 ${author}"
    },
    "license": "MIT",
    "devDependencies": {
        "electron": "^37.4.0",
        "electron-builder": "^26.0.12",
        "electron-reloader": "^1.2.3"
    },
    "dependencies": {
        "@electron/asar": "^3.2.10",
        "@electron/packager": "^18.3.2",
        "electron-log": "^5.4.1",
        "electron-updater": "^6.6.2",
        "exceljs": "^4.4.0",
        "pdf-parse": "^1.1.1"
    }
}
