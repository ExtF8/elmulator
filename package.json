{
    "name": "elmulator",
    "version": "1.9.0",
    "description": "calculator for Elmar",
    "author": "ExtF8",
    "main": "main.js",
    "scripts": {
        "start": "electron .",
        "build": "electron-builder --linux --win"
    },
    "build": {
        "appId": "com.extfield8.elmulator",
        "productName": "Elmulator",
        "linux": {
            "icon": "./images/icons/32x32.png",
            "category": "Utility",
            "target": [
                "snap"
            ],
            "electronLanguages": [
                "en-US"
            ]
        },
        "snap": {
            "confinement": "strict",
            "summary": "Calculator for Elmar",
            "grade": "stable",
            "base": "core20"
        },
        "win": {
            "artifactName":"Elmulator-${version}-${arch}.${ext}",
            "target": "portable",
            "electronLanguages": [
                "en-US"
            ],
            "icon": "./images/icons/icon.ico",
            "asar": true,
            "compression": "maximum"
        },
        "copyright": "Copyright Â© 2024 ${author}"
    },
    "license": "MIT",
    "devDependencies": {
        "electron": "^30.0.5",
        "electron-builder": "^24.13.3"
    },
    "dependencies": {
        "@electron/asar": "^3.2.10",
        "@electron/packager": "^18.3.2"
    }
}
